<h1><%= @cocktail.name %></h1>
<h2>Ingredients</h2>
<br>
<% @cocktail.doses.each do |dose| %>
  <%= dose.description %> --> <%= dose.ingredient.name %>
  <%= link_to "", dose_path(dose),
          method: :delete,
          data: { confirm: "Are you sure?" }, class: "far fa-trash-alt" %> <br>
<% end %>
<br><br>
<%= link_to "Add ingredient and dose", new_cocktail_dose_path(@cocktail)%>
<br><br>
<%= link_to "Edit the cocktail", edit_cocktail_path(@cocktail) %>
<br><br>
<%= link_to "Back to list", cocktails_path %>
